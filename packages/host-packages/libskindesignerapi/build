#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR/libskindesignerapi

make
make_install
cp -r .install/usr/local/include .install/usr
cp -r .install/usr/local/lib .install/usr
#cd .install/usr 
ln -s libskindesignerapi.so.0.0.1 .install/usr/lib/libskindesignerapi.so.0
ln -s libskindesignerapi.so.0.0.1 .install/usr/local/lib/libskindesignerapi.so.0

